<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="50dp"
    android:id="@+id/layout1"
    android:orientation="vertical"
    android:isScrollContainer="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_select_service_entry"
    tools:context="elitetechsolutions.pocketcar.SelectServiceEntry">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/carName"
        android:textColor="#000000"
        android:textSize="30dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/title"
        android:text="Select An Entry To Modify"
        android:textAllCaps="true"
        android:textColor="#0099CC"
        android:textSize="50dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/entryView">

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingRight="20dp"
            android:id="@+id/serviceText"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#0099CC" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/serviceNotes"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Modify Entry"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:background="#0099CC"
            android:onClick="Edit"
            />
    </LinearLayout>

</LinearLayout>
    </LinearLayout>
</ScrollView>