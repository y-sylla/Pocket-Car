<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="50dp"
    android:orientation="vertical"
    android:isScrollContainer="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_register" tools:context="elitetechsolutions.pocketcar.Register">

    <TextView
        android:id="@+id/Creation"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center|top"
        android:layout_margin="20dp"
        android:text="New Account"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#0099CC"
        android:textSize="40dp"
        android:paddingBottom="10dp"
        android:paddingTop="75dp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#727272"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/cuLabel"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:text="Enter Your Username"
        android:textColor="#000000"
        android:textStyle="italic"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/cuField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="4-16 Characters"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/cpLabel"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:text="Enter Your Password"
        android:textStyle="italic"
        android:textColor="#000000"
        android:textSize="20dp"
        android:paddingLeft="2dp"
        />

    <EditText
        android:id="@+id/cpField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="8-20 Characters"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/confirmLabel"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:text="Confirm Your Password"
        android:textStyle="italic"
        android:textColor="#000000"
        android:textSize="20dp"
        android:paddingLeft="2dp"
        />

    <EditText
        android:id="@+id/confirmField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Must be same as last entry"
        android:layout_marginBottom="20dp"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/createButton"
        android:text="Create Account"
        android:background="#0099CC"
        android:textStyle="italic|bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_marginLeft="330dp"
        android:textSize="20dp"
        android:onClick="newUser"
        />

</LinearLayout>
</ScrollView>